<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <layer-list>
            <item
                android:left="2.0dip"
                android:top="2.0dip">
                <shape>
                    <corners android:radius="20dp"/>
                    <solid android:color="#2980D9"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="2dip" android:top="2.0dip">
                <shape>
                    <solid android:color="#66000000"/>
                    <corners android:radius="20dip"/>
                </shape>
            </item>
            <item android:bottom="2.0dip" android:right="2.0dip">
                <shape>
                    <corners android:radius="20dp"/>
                    <solid android:color="#21D4FD"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>