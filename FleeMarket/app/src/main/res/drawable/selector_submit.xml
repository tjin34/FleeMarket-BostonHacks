<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#8EC5FC"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item >
                <shape>
                    <gradient
                        android:startColor="#08AEEA"
                        android:endColor="#21D4FD"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/grey_500"/>
        </shape>
    </item>
</selector>